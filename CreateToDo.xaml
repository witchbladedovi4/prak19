<Window x:Class="WpfApp3.CreateToDo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CreateToDo" Height="450" Width="400">
    <Grid Background="#fffdfaf1">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Новое дело" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <GroupBox Background="#FDF5DF" Grid.Row="1"
            x:Name="groupBoxToDo"
                  >
            <StackPanel Margin="5 0 10 0">
                <StackPanel>
                    <TextBlock Text="Название:"/>
                    <TextBox Name="titleToDo" Margin="0 10 0 0"/>
                </StackPanel>
                <StackPanel Margin="0 10 0 0">
                    <TextBlock Text="Выполнить до:"/>
                    <DatePicker Margin="0 10 0 0"
                                Name = "dateToDo"/>
                </StackPanel>
                <StackPanel Margin="0 10 0 0">
                    <TextBlock Text="Описание:" Margin="0 0 0 10"/>
                    <TextBox  Name="descriptionToDo"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <Button Grid.Row="2" 
                Background="#5ebec4" 
                Content="Добавить дело" 
                MaxHeight="30" MaxWidth="100"
                Name="SaveToDo">
            
        </Button>
    </Grid>
</Window>
