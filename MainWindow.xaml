<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Список дел" Height="450" Width="400"
        Icon="icon/icon.png"
        ResizeMode="NoResize"
        >

    <Grid Background="#fffdfaf1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Text="Список дел" 
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource HeaderStyle}"/>
        <DataGrid Name="listToDo"
            Margin="5 0 5 0"
            Grid.Row="1" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
                  Style="{StaticResource DataGridStyle}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay, 
                    UpdateSourceTrigger=PropertyChanged}"
                                      Click="CheckBox_Cheked"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Binding="{Binding Path=Name}"
                                    Width="*"
                                    IsReadOnly="True"  
                                    />
                <DataGridTextColumn Binding="{Binding Path=Date, StringFormat=dd.MM.yyyy}"
                                    Width="0.5*"
                                    IsReadOnly="True"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="DeleteToDo" 
                                    Click="DeleteToDo">
                                <Image Source="icon/delete.png" 
                                       Height="10" 
                                       Width="10"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>

                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  MaxHeight="150">
                        
                        <TextBlock Text="{Binding Path=Description}"
                                   TextWrapping="Wrap" Margin="5"/>
                    </ScrollViewer>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        <Button Grid.Column="1" Grid.Row="0" 
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Height="30"
                Width="30"
                Margin="0 0 5 0"
                Click="CreateToDo"
                >
            <Image Source="icon/add.png"/>
            <Button.ToolTip>
                <ToolTip>
                    <TextBlock Text="При добавлении дела появится в списке слева, и его придется выполнить"/>
                </ToolTip>
            </Button.ToolTip>

        </Button>



            <ProgressBar Name="progressBar"
                         Height="20"
                         Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
            <TextBlock Name="progressText"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>





    </Grid>
</Window>
